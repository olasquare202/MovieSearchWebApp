                        <!-- Heading -->
                        <h4><span>imdbRating</span>:</h4>
                        <!-- Description -->
                        <h5><a href="#">@Model.imdbRating</a></h5>
                        <!-- Heading -->
                        <h4><span>imdbVotes</span>:</h4>
                        <!-- Description -->
                        <h5><a href="#">@Model.imdbVotes</a></h5>
                        <!-- Heading -->
                        <h4><span>imdbID</span>:</h4>
