                        <!-- Heading -->
                        <h4><span>Response</span>:</h4>
                        <!-- Description -->
                        <h5><a href="#">@Model.Response</a></h5>
                   </div>
                </div>
            </div>
            <!-- Review -->
            <div class="ui-review">
                <!-- Heading -->
                <h3>Brief Story</h3>
                <!-- Paragraph -->
                <p>@Model.Plot</p>
                <!-- Buttons -->
                <a href="#" class="ui-btn bg-red"><i class="fa fa-ticket"></i> Buy Tickets</a>
                <a href="#" class="ui-btn bg-green"><i class="fa fa-dot-circle-o"></i> Buy DVDs</a>
            </div>
        </div>
    </div>
</div>





               